<h2>New Movies</h2>

<form action="/movies/create" method="POST">
  <label>Title:</label>
  <input type="text" name="title">

  <label>Genre:</label>
  <input type="text" name="genre">
  
  <label>Plot:</label>
  <input type="text" name="plot">

  <label>Cast:</label>
  <select name="cast" multiple>

    {{#each allCast}}
      <option value="{{_id}}">{{name}}</option>
    {{/each}}
    
  </select>

  <button>Submit</button>

</form>
